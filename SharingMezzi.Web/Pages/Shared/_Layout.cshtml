@using Microsoft.AspNetCore.Http.Extensions
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light" />
    <meta name="theme-color" content="#6366f1" />
    
    <title>@ViewData["Title"] - SharingMezzi</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="SharingMezzi - Il sistema di condivisione di mezzi di trasporto piÃ¹ conveniente e sostenibile. Biciclette, scooter e auto elettriche sempre disponibili." />
    <meta name="keywords" content="sharing mobility, bike sharing, scooter sharing, mobilitÃ  sostenibile, trasporti urbani" />
    <meta name="author" content="SharingMezzi" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/premium-style.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
@{
    var authService = Context.RequestServices.GetService<SharingMezzi.Web.Services.IAuthService>();
    var isAuthenticated = authService?.IsAuthenticated() ?? false;
    var currentUser = isAuthenticated ? authService?.GetCurrentUser() : null;
    var isAdmin = currentUser?.Ruolo == SharingMezzi.Web.Models.UserRole.Admin;
}
<body class="@(isAuthenticated ? "authenticated" : "")">
    

    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <nav class="premium-sidebar bg-white shadow-sm" id="sidebar" style="width: 260px; min-height: 100vh; position: fixed; top: 0; left: 0; z-index: 1000;">
            <div class="sidebar-header p-3 border-bottom">
                <div class="d-flex align-items-center">
                    <div class="brand-icon me-3">
                        <i class="fas fa-bicycle text-primary fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">SharingMezzi</h5>
                        <small class="text-muted text-uppercase">Premium</small>
                    </div>
                </div>
                
                <button class="btn btn-sm btn-outline-secondary d-lg-none position-absolute top-0 end-0 m-2" id="sidebarClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="sidebar-content flex-grow-1 p-3">
                <!-- Navigation Menu -->
                <div class="nav flex-column">
                    <div class="nav-section mb-2">
                        <small class="text-muted text-uppercase fw-semibold">Principale</small>
                    </div>
                    
                    @if (isAuthenticated)
                    {
                        <a class="nav-link d-flex align-items-center py-2 px-3 rounded mb-1 text-dark" href="/Dashboard">
                            <i class="fas fa-chart-pie me-3"></i>
                            <span>Dashboard</span>
                        </a>
                    }

                    <a class="nav-link d-flex align-items-center py-2 px-3 rounded mb-1 text-dark" href="/Vehicles">
                        <i class="fas fa-bicycle me-3"></i>
                        <span>Mezzi</span>
                        @if (isAuthenticated)
                        {
                            <span class="badge bg-primary rounded-pill ms-auto">125</span>
                        }
                    </a>

                    <a class="nav-link d-flex align-items-center py-2 px-3 rounded mb-1 text-dark" href="/Map">
                        <i class="fas fa-map-marked-alt me-3"></i>
                        <span>Mappa</span>
                    </a>

                    <a class="nav-link d-flex align-items-center py-2 px-3 rounded mb-1 text-dark" href="/Parking">
                        <i class="fas fa-parking me-3"></i>
                        <span>Parcheggi</span>
                    </a>

                    @if (isAuthenticated)
                    {
                        <div class="nav-section mt-4 mb-2">
                            <small class="text-muted text-uppercase fw-semibold">Il Mio Account</small>
                        </div>

                        <a class="nav-link d-flex align-items-center py-2 px-3 rounded mb-1 text-dark" href="/Trips">
                            <i class="fas fa-route me-3"></i>
                            <span>Viaggi</span>
                        </a>

                        <a class="nav-link d-flex align-items-center py-2 px-3 rounded mb-1 text-dark" href="/Billing">
                            <i class="fas fa-credit-card me-3"></i>
                            <span>Fatturazione</span>
                        </a>

                        <a class="nav-link d-flex align-items-center py-2 px-3 rounded mb-1 text-dark" href="/Profile">
                            <i class="fas fa-user-circle me-3"></i>
                            <span>Profilo</span>
                        </a>
                    }

                    @* Sezione Amministrazione rimossa dalla sidebar *@
                </div>
            </div>

            <div class="sidebar-footer p-3 border-top">
                <div class="d-flex justify-content-center gap-2">
                    @* Pulsante login rimosso dalla sidebar - ora disponibile solo nella navbar superiore *@
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content flex-grow-1" style="margin-left: 260px; min-height: 100vh;">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary d-lg-none me-3" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    @await Component.InvokeAsync("Navbar")
                </div>
            </nav>

            <!-- Page Content -->
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    
    <!-- Custom JavaScript -->
    <script src="~/js/premium-app.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Mobile sidebar toggle -->
    <script>
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('d-none');
        });
    </script>
    
    <script>
        // Sincronizzazione autenticazione persistente
        (function syncPersistentAuth() {
            try {
                // Controlla se ci sono cookie persistenti
                const hasPersistentToken = document.cookie.includes('PersistentToken');
                const hasPersistentUser = document.cookie.includes('PersistentUser');
                
                if (hasPersistentToken && hasPersistentUser) {
                    console.log('ðŸ”„ Cookie persistenti rilevati, sincronizzando autenticazione...');
                    
                    // Se siamo su una pagina protetta e non autenticati, refresh per attivare il middleware
                    const protectedPaths = ['/Dashboard', '/Vehicles', '/Trips', '/Billing', '/Profile', '/Admin'];
                    const currentPath = window.location.pathname;
                    const isProtectedPage = protectedPaths.some(path => currentPath.startsWith(path));
                    
                    if (isProtectedPage) {
                        // Aspetta un momento per permettere al middleware di processare
                        setTimeout(() => {
                            if (!document.body.classList.contains('authenticated')) {
                                console.log('ðŸ”„ Refresh per attivare auto-login...');
                                window.location.reload();
                            }
                        }, 1000);
                    }
                }
            } catch (e) {
                console.debug('Sync persistent auth error:', e);
            }
        })();
    </script>
</body>
</html>