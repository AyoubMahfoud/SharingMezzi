<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SharingMezzi</title>
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Premium CSS -->
    <link rel="stylesheet" href="~/css/premium-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/premium-dark.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]">
    <div class="wrapper">
        <!-- Premium Sidebar -->
        <nav id="sidebar" class="premium-sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <div class="brand-icon">
                        <i class="fas fa-bicycle"></i>
                    </div>
                    <div class="brand-content">
                        <span class="brand-text">SharingMezzi</span>
                        <span class="brand-subtitle">Premium</span>
                    </div>
                </div>
                <button class="sidebar-toggle btn-premium-ghost" type="button">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="sidebar-content">
                <div class="sidebar-user premium-card" id="sidebarUser">
                    <div class="user-avatar">
                        <div class="avatar-circle">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="status-indicator"></div>
                    </div>
                    <div class="user-info">
                        <div class="user-name">Caricamento...</div>
                        <div class="user-role">Utente</div>
                    </div>
                </div>
                
                <ul class="sidebar-nav">
                    <li class="nav-section">
                        <span class="nav-section-title">Principale</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Dashboard">
                            <div class="nav-icon">
                                <i class="fas fa-tachometer-alt"></i>
                            </div>
                            <span>Dashboard</span>
                            <div class="nav-arrow">
                                <i class="fas fa-chevron-right"></i>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Vehicles">
                            <div class="nav-icon">
                                <i class="fas fa-bicycle"></i>
                            </div>
                            <span>Mezzi</span>
                            <div class="nav-badge">6</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Parking">
                            <div class="nav-icon">
                                <i class="fas fa-parking"></i>
                            </div>
                            <span>Parcheggi</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Map">
                            <div class="nav-icon">
                                <i class="fas fa-map-marked-alt"></i>
                            </div>
                            <span>Mappa</span>
                        </a>
                    </li>
                    
                    <li class="nav-section">
                        <span class="nav-section-title">Attivit√†</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Trips">
                            <div class="nav-icon">
                                <i class="fas fa-route"></i>
                            </div>
                            <span>Le mie corse</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Billing">
                            <div class="nav-icon">
                                <i class="fas fa-credit-card"></i>
                            </div>
                            <span>Ricariche</span>
                        </a>
                    </li>
                    
                    <li class="nav-section">
                        <span class="nav-section-title">Account</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Profile">
                            <div class="nav-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <span>Profilo</span>
                        </a>
                    </li>
                    
                    <li class="nav-section admin-only" style="display: none;">
                        <span class="nav-section-title">Amministrazione</span>
                    </li>
                    <li class="nav-item admin-only" style="display: none;">
                        <a class="nav-link" href="/test-api">
                            <div class="nav-icon">
                                <i class="fas fa-plug"></i>
                            </div>
                            <span>Test API</span>
                        </a>
                    </li>
                    <li class="nav-item admin-only" style="display: none;">
                        <a class="nav-link" href="/Admin/Users">
                            <div class="nav-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span>Gestione Utenti</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <div class="sidebar-footer">
                <button class="btn-premium-outline logout-btn" onclick="logout()">
                    <i class="fas fa-sign-out-alt"></i> 
                    <span>Logout</span>
                </button>
            </div>
        </nav>

        <!-- Main Content -->
        <div id="content" class="content">
            <!-- Premium Top Navigation -->
            <nav class="premium-nav">
                <div class="container-fluid">
                    <div class="nav-left">
                        <button class="btn-premium-ghost mobile-menu-btn d-lg-none" type="button" onclick="toggleSidebar()">
                            <i class="fas fa-bars"></i>
                        </button>
                        
                        <div class="breadcrumb-nav">
                            <span class="breadcrumb-item">@ViewData["Title"]</span>
                        </div>
                    </div>
                    
                    <div class="nav-right">
                        <!-- Search -->
                        <div class="search-box">
                            <div class="search-input-group">
                                <i class="fas fa-search search-icon"></i>
                                <input type="text" class="search-input" placeholder="Cerca mezzi, parcheggi..." />
                            </div>
                        </div>
                        
                        <!-- Notifications -->
                        <div class="nav-item dropdown">
                            <button class="nav-btn" id="notificationDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <span class="notification-badge">0</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end premium-dropdown">
                                <li class="dropdown-header">
                                    <i class="fas fa-bell"></i>
                                    Notifiche
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="dropdown-item-custom">
                                    <div class="empty-state">
                                        <i class="fas fa-bell-slash"></i>
                                        <span>Nessuna notifica</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        
                        <!-- Theme Toggle -->
                        <button id="themeToggle" class="nav-btn">
                            <i class="fas fa-moon"></i>
                        </button>
                        
                        <!-- User Menu -->
                        <div class="nav-item dropdown">
                            <button class="nav-btn user-btn" id="userDropdown" data-bs-toggle="dropdown">
                                <div class="user-avatar-small">
                                    <i class="fas fa-user"></i>
                                </div>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end premium-dropdown">
                                <li class="dropdown-header">
                                    <div class="user-info-dropdown">
                                        <div class="user-avatar-dropdown">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <div class="user-name-dropdown">Admin</div>
                                            <div class="user-email-dropdown">admin@sharingmezzi.it</div>
                                        </div>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user"></i> Profilo</a></li>
                                <li><a class="dropdown-item" href="/Settings"><i class="fas fa-cog"></i> Impostazioni</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item logout-item" href="#" onclick="logout()"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <main class="main-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Premium JS -->
    <script src="~/js/premium-app.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
