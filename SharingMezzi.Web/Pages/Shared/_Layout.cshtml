<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SharingMezzi</title>
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/premium-style.css" asp-append-version="true" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="@ViewData["BodyClass"]">
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <i class="fas fa-bicycle text-primary"></i>
                    <span class="brand-text">SharingMezzi</span>
                </div>
                <button class="sidebar-toggle" type="button">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            
            <div class="sidebar-content">
                <div class="sidebar-user" id="sidebarUser">
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="user-info">
                        <div class="user-name">Caricamento...</div>
                        <div class="user-role">Utente</div>
                    </div>
                </div>
                
                <ul class="sidebar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Vehicles">
                            <i class="fas fa-bicycle"></i>
                            <span>Mezzi</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Parking">
                            <i class="fas fa-parking"></i>
                            <span>Parcheggi</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Map">
                            <i class="fas fa-map-marked-alt"></i>
                            <span>Mappa</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Trips">
                            <i class="fas fa-route"></i>
                            <span>Le mie corse</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Billing">
                            <i class="fas fa-credit-card"></i>
                            <span>Ricariche</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Profile">
                            <i class="fas fa-user"></i>
                            <span>Profilo</span>
                        </a>
                    </li>
                    <li class="nav-item admin-only" style="display: none;">
                        <a class="nav-link" href="/test-api">
                            <i class="fas fa-plug"></i>
                            <span>Test API</span>
                        </a>
                    </li>
                    <li class="nav-item admin-only" style="display: none;">
                        <a class="nav-link" href="/Admin/Users">
                            <i class="fas fa-users"></i>
                            <span>Gestione Utenti</span>
                        </a>
                    </li>
                    <li class="nav-item admin-only" style="display: none;">
                        <a class="nav-link" href="/Admin/Reports">
                            <i class="fas fa-chart-bar"></i>
                            <span>Report</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <div class="sidebar-footer">
                <button class="btn btn-outline-danger btn-sm w-100" onclick="logout()">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </nav>

        <!-- Main Content -->
        <div id="content" class="content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-primary d-lg-none" type="button" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="navbar-nav ms-auto">
                        <!-- Notifications -->
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <span class="badge bg-danger notification-badge">0</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                                <li><h6 class="dropdown-header">Notifiche</h6></li>
                                <li><a class="dropdown-item" href="#">Nessuna notifica</a></li>
                            </ul>
                        </div>
                        
                        <!-- Theme Toggle -->
                        <div class="nav-item">
                            <button id="themeToggle" class="nav-link btn btn-link">
                                <i class="fas fa-moon"></i>
                            </button>
                        </div>
                        
                        <!-- User Menu -->
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user"></i> Profilo</a></li>
                                <li><a class="dropdown-item" href="/Settings"><i class="fas fa-cog"></i> Impostazioni</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#" onclick="logout()"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/premium-app.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
