@page
@model SharingMezzi.Web.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="animate-fade-in-up">
    <!-- Welcome Header -->
    <div class="page-header">
        <h1 class="page-title">
            Bentornato, <span class="text-gradient">@(Model.CurrentUser?.Nome ?? "Utente")</span>! ðŸ‘‹
        </h1>
        <p class="page-subtitle">Ecco una panoramica delle tue attivitÃ  e dei mezzi disponibili</p>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-5">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="dashboard-card animate-fade-in-up" style="animation-delay: 0.1s;">
                <div class="dashboard-card-icon bg-primary">
                    <i class="fas fa-bicycle"></i>
                </div>
                <div class="dashboard-card-title">Mezzi Disponibili</div>
                <div class="dashboard-card-value">@Model.AvailableVehicles</div>
                <div class="dashboard-card-change positive">
                    <i class="fas fa-arrow-up"></i>
                    <span>+5 rispetto a ieri</span>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="dashboard-card animate-fade-in-up" style="animation-delay: 0.2s;">
                <div class="dashboard-card-icon bg-success">
                    <i class="fas fa-route"></i>
                </div>
                <div class="dashboard-card-title">Corse Totali</div>
                <div class="dashboard-card-value">@Model.TotalTrips</div>
                <div class="dashboard-card-change positive">
                    <i class="fas fa-arrow-up"></i>
                    <span>+12% questo mese</span>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="dashboard-card animate-fade-in-up" style="animation-delay: 0.3s;">
                <div class="dashboard-card-icon bg-warning">
                    <i class="fas fa-wallet"></i>
                </div>
                <div class="dashboard-card-title">Saldo Corrente</div>
                <div class="dashboard-card-value">â‚¬@Model.CurrentBalance</div>
                <div class="dashboard-card-change negative">
                    <i class="fas fa-arrow-down"></i>
                    <span>-â‚¬5.50 ultima corsa</span>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="dashboard-card animate-fade-in-up" style="animation-delay: 0.4s;">
                <div class="dashboard-card-icon bg-info">
                    <i class="fas fa-leaf"></i>
                </div>
                <div class="dashboard-card-title">Punti Eco</div>
                <div class="dashboard-card-value">@Model.EcoPoints</div>
                <div class="dashboard-card-change positive">
                    <i class="fas fa-arrow-up"></i>
                    <span>+15 punti</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="quick-actions-card animate-fade-in-up" style="animation-delay: 0.5s;">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>
                        Azioni Rapide
                    </h5>
                    <span class="badge bg-primary">4 disponibili</span>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-3">
                        <a href="/Vehicles" class="action-btn">
                            <i class="fas fa-bicycle"></i>
                            <span>Trova Mezzo</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <a href="/Parking" class="action-btn">
                            <i class="fas fa-parking"></i>
                            <span>Parcheggi</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <a href="/Billing" class="action-btn">
                            <i class="fas fa-credit-card"></i>
                            <span>Ricarica</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <a href="/Trips" class="action-btn">
                            <i class="fas fa-history"></i>
                            <span>Storico</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row">
        <!-- Recent Trips -->
        <div class="col-lg-6 mb-4">
            <div class="premium-card animate-fade-in-left" style="animation-delay: 0.6s;">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h5 class="mb-0">
                            <i class="fas fa-route text-success me-2"></i>
                            Corse Recenti
                        </h5>
                        <a href="/Trips" class="btn-premium-ghost btn-sm">
                            Vedi tutte
                        </a>
                    </div>
                    
                    @if (Model.RecentTrips.Any())
                    {
                        <div class="timeline">
                            @foreach (var trip in Model.RecentTrips)
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker">
                                        <i class="fas fa-bicycle"></i>
                                    </div>
                                    <div class="timeline-title">@trip.Mezzo?.Modello</div>
                                    <div class="timeline-text">
                                        <strong>Da:</strong> @trip.ParcheggioPartenza?.Nome<br>
                                        @if (trip.ParcheggioDestinazione != null)
                                        {
                                            <strong>A:</strong> @trip.ParcheggioDestinazione.Nome
                                        }
                                        else
                                        {
                                            <span class="text-warning"><strong>Stato:</strong> In corso...</span>
                                        }
                                    </div>
                                    <div class="timeline-time">
                                        <i class="fas fa-clock"></i>
                                        @trip.Inizio.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state py-5">
                            <i class="fas fa-route fa-3x mb-3"></i>
                            <h6>Nessuna corsa recente</h6>
                            <p class="text-muted mb-4">Inizia la tua prima avventura!</p>
                            <a href="/Vehicles" class="btn-premium">
                                <i class="fas fa-bicycle"></i>
                                Trova un mezzo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Map and Stats -->
        <div class="col-lg-6 mb-4">
            <div class="premium-card animate-fade-in-left" style="animation-delay: 0.7s;">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h5 class="mb-0">
                            <i class="fas fa-map-marked-alt text-info me-2"></i>
                            Mezzi Nelle Vicinanze
                        </h5>
                        <a href="/Map" class="btn-premium-ghost btn-sm">
                            Mappa completa
                        </a>
                    </div>
                    
                    <div class="map-preview" id="mapPreview">
                        <div class="map-placeholder">
                            <div class="map-icon">
                                <i class="fas fa-map fa-3x text-primary mb-3"></i>
                            </div>
                            <h6>Mappa Interattiva</h6>
                            <p class="text-muted mb-4">Visualizza mezzi e parcheggi in tempo reale</p>
                            <div class="map-stats">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <div class="stat-number text-primary">@Model.AvailableVehicles</div>
                                            <div class="stat-label">Mezzi</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <div class="stat-number text-success">3</div>
                                            <div class="stat-label">Parcheggi</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <div class="stat-number text-warning">15</div>
                                            <div class="stat-label">Slot</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Stats Row -->
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="premium-card animate-fade-in-up" style="animation-delay: 0.8s;">
                <div class="card-body p-4 text-center">
                    <div class="weather-widget">
                        <div class="weather-icon mb-3">
                            <i class="fas fa-sun fa-3x text-warning"></i>
                        </div>
                        <h5 class="mb-1">22Â°C</h5>
                        <p class="text-muted mb-3">Soleggiato - Perfetto per una corsa!</p>
                        <div class="weather-details">
                            <div class="row">
                                <div class="col-6">
                                    <small class="text-muted">Vento</small>
                                    <div class="fw-bold">15 km/h</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">UmiditÃ </small>
                                    <div class="fw-bold">65%</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="premium-card animate-fade-in-up" style="animation-delay: 0.9s;">
                <div class="card-body p-4">
                    <h6 class="mb-3">
                        <i class="fas fa-chart-line text-primary me-2"></i>
                        Obiettivi del Mese
                    </h6>
                    <div class="progress-item mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="fw-medium">Corse</span>
                            <span class="text-muted">@Model.TotalTrips/20</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-primary" style="width: @((Model.TotalTrips / 20.0) * 100)%"></div>
                        </div>
                    </div>
                    <div class="progress-item mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="fw-medium">Punti Eco</span>
                            <span class="text-muted">@Model.EcoPoints/200</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: @((Model.EcoPoints / 200.0) * 100)%"></div>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <small class="text-muted">Continua cosÃ¬ per sbloccare nuovi rewards!</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="premium-card animate-fade-in-up" style="animation-delay: 1s;">
                <div class="card-body p-4">
                    <h6 class="mb-3">
                        <i class="fas fa-gift text-warning me-2"></i>
                        Ricompense
                    </h6>
                    <div class="reward-item">
                        <div class="reward-icon">
                            <i class="fas fa-medal text-warning"></i>
                        </div>
                        <div class="reward-content">
                            <div class="reward-title">Eco Warrior</div>
                            <div class="reward-desc">Raggiungi 150 punti eco</div>
                            <div class="badge bg-success">Completato!</div>
                        </div>
                    </div>
                    <div class="reward-item">
                        <div class="reward-icon">
                            <i class="fas fa-star text-primary"></i>
                        </div>
                        <div class="reward-content">
                            <div class="reward-title">Frequentatore</div>
                            <div class="reward-desc">Completa 20 corse</div>
                            <div class="badge bg-warning">In corso</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
body {
    background: linear-gradient(135deg, #181c24 0%, #23283b 100%);
    color: #e4e6eb;
    font-family: 'Poppins', 'Inter', Arial, sans-serif;
    min-height: 100vh;
}

.page-header {
    background: rgba(30,34,54,0.85);
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.45);
    padding: 2rem 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
}
.page-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(90deg,#6dd5ed,#2193b0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
}
.page-subtitle {
    color: #b0b3b8;
    font-size: 1.15rem;
}

.dashboard-card {
    background: linear-gradient(135deg, #23283b 60%, #181c24 100%);
    border-radius: 18px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.35);
    padding: 1.5rem 1.2rem;
    color: #e4e6eb;
    transition: transform 0.2s, box-shadow 0.2s;
}
.dashboard-card:hover {
    transform: translateY(-4px) scale(1.03);
    box-shadow: 0 8px 32px rgba(0,0,0,0.45);
}
.dashboard-card-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.7rem;
    margin-bottom: 1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.25);
}
.bg-primary { background: linear-gradient(135deg,#6dd5ed,#2193b0); color: #fff; }
.bg-success { background: linear-gradient(135deg,#43e97b,#38f9d7); color: #fff; }
.bg-warning { background: linear-gradient(135deg,#f7971e,#ffd200); color: #fff; }
.bg-info { background: linear-gradient(135deg,#667eea,#764ba2); color: #fff; }

.dashboard-card-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #b0b3b8;
}
.dashboard-card-value {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
}
.dashboard-card-change {
    font-size: 0.95rem;
    margin-top: 0.5rem;
}
.dashboard-card-change.positive { color: #43e97b; }
.dashboard-card-change.negative { color: #f7971e; }

.quick-actions-card {
    background: linear-gradient(135deg, #23283b 60%, #181c24 100%);
    border-radius: 18px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.35);
    padding: 2rem 1.5rem;
    color: #e4e6eb;
}
.action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: rgba(30,34,54,0.85);
    border-radius: 14px;
    padding: 1.2rem 0.5rem;
    color: #e4e6eb;
    font-weight: 600;
    font-size: 1.1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.18);
    transition: background 0.2s, color 0.2s, transform 0.2s;
    text-decoration: none;
}
.action-btn:hover {
    background: linear-gradient(135deg,#6dd5ed,#2193b0);
    color: #fff;
    transform: scale(1.05);
}

.premium-card {
    background: linear-gradient(135deg, #23283b 60%, #181c24 100%);
    border-radius: 18px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.35);
    color: #e4e6eb;
    margin-bottom: 1.5rem;
    transition: box-shadow 0.2s, transform 0.2s;
}
.premium-card:hover {
    box-shadow: 0 8px 32px rgba(0,0,0,0.45);
    transform: translateY(-4px) scale(1.02);
}
.card-body {
    padding: 2rem 1.5rem;
}

.timeline {
    border-left: 2px solid #6dd5ed;
    padding-left: 1.2rem;
}
.timeline-item {
    margin-bottom: 1.5rem;
    position: relative;
}
.timeline-marker {
    position: absolute;
    left: -32px;
    top: 0;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg,#6dd5ed,#2193b0);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 1.2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.18);
}
.timeline-title {
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.2rem;
}
.timeline-text {
    color: #b0b3b8;
    font-size: 0.98rem;
}
.timeline-time {
    color: #43e97b;
    font-size: 0.95rem;
    margin-top: 0.2rem;
}

.empty-state {
    background: rgba(30,34,54,0.85);
    border-radius: 18px;
    color: #b0b3b8;
    text-align: center;
}
.btn-premium {
    background: linear-gradient(135deg,#6dd5ed,#2193b0);
    color: #fff;
    border-radius: 12px;
    padding: 0.7rem 1.5rem;
    font-weight: 600;
    font-size: 1.1rem;
    border: none;
    box-shadow: 0 2px 8px rgba(0,0,0,0.18);
    transition: background 0.2s, color 0.2s;
    text-decoration: none;
}
.btn-premium:hover {
    background: linear-gradient(135deg,#43e97b,#38f9d7);
    color: #fff;
}
.btn-premium-ghost {
    background: none;
    color: #6dd5ed;
    border: 2px solid #6dd5ed;
    border-radius: 12px;
    padding: 0.5rem 1.2rem;
    font-weight: 600;
    font-size: 1rem;
    transition: background 0.2s, color 0.2s;
    text-decoration: none;
}
.btn-premium-ghost:hover {
    background: linear-gradient(135deg,#6dd5ed,#2193b0);
    color: #fff;
}

.map-preview {
    height: 300px;
    background: linear-gradient(135deg, #23283b 0%, #181c24 100%);
    border-radius: 18px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.18);
}
.map-placeholder {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
}
.map-icon {
    margin-bottom: 1rem;
}
.map-stats {
    width: 100%;
    margin-top: 1.5rem;
}
.stat-item {
    padding: 0.5rem;
}
.stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.2rem;
}
.stat-label {
    font-size: 0.8rem;
    color: #b0b3b8;
    text-transform: uppercase;
    letter-spacing: 0.3px;
}

.progress {
    background: #23283b;
    border-radius: 10px;
}
.progress-bar {
    border-radius: 10px;
    transition: width 0.3s;
}
.progress-item {
    margin-bottom: 1rem;
}

.reward-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(30,34,54,0.85);
    border-radius: 14px;
    margin-bottom: 1rem;
    transition: background 0.2s, transform 0.2s;
}
.reward-item:hover {
    background: linear-gradient(135deg,#6dd5ed,#2193b0);
    transform: translateY(-2px) scale(1.03);
    color: #fff;
}
.reward-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg,#6dd5ed,#2193b0);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.18);
    color: #fff;
}
.reward-content {
    flex: 1;
}
.reward-title {
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.2rem;
}
.reward-desc {
    font-size: 0.95rem;
    color: #b0b3b8;
    margin-bottom: 0.5rem;
}

.weather-widget {
    text-align: center;
}
.weather-icon {
    margin-bottom: 1rem;
}
.weather-details {
    margin-top: 1.5rem;
}

/* Premium scrollbar */
::-webkit-scrollbar {
    width: 10px;
    background: #23283b;
}
::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg,#6dd5ed,#2193b0);
    border-radius: 10px;
}
</style>
