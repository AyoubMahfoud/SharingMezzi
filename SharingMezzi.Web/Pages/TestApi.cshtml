@page
@model SharingMezzi.Web.Pages.TestApiModel
@{
    ViewData["Title"] = "Test API";
    ViewData["BodyClass"] = "test-page";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Test API</h2>
        </div>
        <div class="card-body">
            <h4>Stato API</h4>
            
            @if (Model.ApiStatus)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> API connessa correttamente
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> API non raggiungibile
                    <p>@Model.ApiStatusMessage</p>
                </div>
            }

            <h4 class="mt-4">Test Login</h4>
            <form method="post" class="mt-3">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" asp-for="Email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" asp-for="Password" required>
                </div>
                <button type="submit" class="btn btn-primary">Test Login</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.TestResult))
            {
                <div class="mt-4">
                    <h5>Risultato Test:</h5>
                    <pre class="bg-light p-3 border rounded">@Model.TestResult</pre>
                </div>
            }
        </div>
    </div>
</div>
