@page "/Admin/Users"
@model SharingMezzi.Web.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Gestione Utenti";
    Layout = "_Layout";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content">
        <div class="welcome-message">
            <h1 class="hero-title">
                <i class="fas fa-user-cog"></i>
                Gestione Utenti
            </h1>
            <p class="hero-subtitle">Visualizza, modifica e gestisci tutti gli utenti registrati</p>
        </div>
        
        <div class="hero-actions">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                <i class="fas fa-user-plus"></i>
                Nuovo Utente
            </button>
            <button class="btn btn-outline-primary" onclick="refreshUsers()">
                <i class="fas fa-sync"></i>
                Aggiorna
            </button>
        </div>
    </div>
</div>

<!-- Stats Grid -->
<div class="stats-grid">
    <div class="stat-card primary">
        <div class="stat-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">@Model.TotalUsers</div>
            <div class="stat-label">Utenti Totali</div>
            <div class="stat-change">
                <i class="fas fa-info-circle"></i>
                <span>Registrati nel sistema</span>
            </div>
        </div>
    </div>

    <div class="stat-card success">
        <div class="stat-icon">
            <i class="fas fa-user-check"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">@Model.ActiveUsers</div>
            <div class="stat-label">Utenti Attivi</div>
            <div class="stat-change positive">
                <i class="fas fa-arrow-up"></i>
                <span>@(Model.TotalUsers > 0 ? Math.Round((decimal)Model.ActiveUsers / Model.TotalUsers * 100, 1) : 0)% del totale</span>
            </div>
        </div>
    </div>

    <div class="stat-card info">
        <div class="stat-icon">
            <i class="fas fa-calendar-plus"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">@Model.NewUsersToday</div>
            <div class="stat-label">Nuovi Oggi</div>
            <div class="stat-change positive">
                <i class="fas fa-user-plus"></i>
                <span>Registrazioni oggi</span>
            </div>
        </div>
    </div>

    <div class="stat-card warning">
        <div class="stat-icon">
            <i class="fas fa-user-shield"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">@Model.AdminCount</div>
            <div class="stat-label">Amministratori</div>
            <div class="stat-change">
                <i class="fas fa-crown"></i>
                <span>Con privilegi elevati</span>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="content-section">
    <div class="section-header">
        <h2 class="section-title">
            <i class="fas fa-list"></i>
            Elenco Utenti
        </h2>
        <div class="section-actions">
            <div class="filter-select">
                <select class="form-select" id="statusFilter">
                    <option value="">Tutti gli stati</option>
                    <option value="Attivo">Attivi</option>
                    <option value="Sospeso">Sospesi</option>
                    <option value="Cancellato">Cancellati</option>
                </select>
            </div>
            <div class="search-box">
                <input type="text" id="userSearch" placeholder="Cerca utenti..." class="form-control">
                <i class="fas fa-search"></i>
            </div>
        </div>
    </div>

    <div class="premium-card">
        <div class="table-responsive">
            <table class="table table-hover" id="usersTable">
                <thead>
                    <tr>
                        <th>Utente</th>
                        <th>Ruolo</th>
                        <th>Stato</th>
                        <th>Credito</th>
                        <th>Punti Eco</th>
                        <th>Registrazione</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr class="user-row" data-status="@user.Stato.ToString().ToLower()" data-user-id="@user.Id">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar me-3">
                                        @(user.Nome?.FirstOrDefault() ?? 'U')
                                    </div>
                                    <div>
                                        <div class="fw-semibold">@user.Nome @user.Cognome</div>
                                        <small class="text-muted">@user.Email</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @{
                                    var roleClass = user.Ruolo == SharingMezzi.Web.Models.UserRole.Admin ? "warning" : "primary";
                                    var roleIcon = user.Ruolo == SharingMezzi.Web.Models.UserRole.Admin ? "crown" : "user";
                                }
                                <span class="badge bg-@roleClass">
                                    <i class="fas fa-@roleIcon me-1"></i>
                                    @(user.Ruolo == SharingMezzi.Web.Models.UserRole.Admin ? "Admin" : "Utente")
                                </span>
                            </td>
                            <td>
                                @{
                                    var statusClass = user.Stato switch
                                    {
                                        SharingMezzi.Web.Models.UserStatus.Attivo => "success",
                                        SharingMezzi.Web.Models.UserStatus.Sospeso => "warning",
                                        SharingMezzi.Web.Models.UserStatus.Cancellato => "danger",
                                        _ => "secondary"
                                    };
                                    var statusIcon = user.Stato switch
                                    {
                                        SharingMezzi.Web.Models.UserStatus.Attivo => "check-circle",
                                        SharingMezzi.Web.Models.UserStatus.Sospeso => "pause-circle",
                                        SharingMezzi.Web.Models.UserStatus.Cancellato => "times-circle",
                                        _ => "question-circle"
                                    };
                                }
                                <span class="badge bg-@statusClass">
                                    <i class="fas fa-@statusIcon me-1"></i>
                                    @user.Stato
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="fw-bold text-success">€@user.Credito.ToString("F2")</span>
                                    @if (user.Credito < 10)
                                    {
                                        <i class="fas fa-exclamation-triangle text-warning ms-1" title="Credito basso"></i>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-leaf text-success me-1"></i>
                                    <span class="fw-semibold">@user.PuntiEco</span>
                                </div>
                            </td>
                            <td>
                                <div>@user.DataRegistrazione.ToString("dd/MM/yyyy")</div>
                                <small class="text-muted">@user.DataRegistrazione.ToString("HH:mm")</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-outline-info" onclick="viewUserDetails(@user.Id)" title="Dettagli">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    @if (user.Stato == SharingMezzi.Web.Models.UserStatus.Attivo)
                                    {
                                        <form method="post" asp-page-handler="SuspendUser" asp-route-id="@user.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-warning" title="Sospendi" onclick="return confirm('Sospendere questo utente?')">
                                                <i class="fas fa-pause"></i>
                                            </button>
                                        </form>
                                    }
                                    else if (user.Stato == SharingMezzi.Web.Models.UserStatus.Sospeso)
                                    {
                                        <form method="post" asp-page-handler="ActivateUser" asp-route-id="@user.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Riattiva" onclick="return confirm('Riattivare questo utente?')">
                                                <i class="fas fa-play"></i>
                                            </button>
                                        </form>
                                    }
                                    @if (user.Stato != SharingMezzi.Web.Models.UserStatus.Cancellato)
                                    {
                                        <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Elimina" onclick="return confirm('Eliminare definitivamente questo utente?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus"></i>
                    Aggiungi Nuovo Utente
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addUserForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Nome</label>
                                <input type="text" class="form-control" name="nome" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Cognome</label>
                                <input type="text" class="form-control" name="cognome" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Telefono</label>
                                <input type="tel" class="form-control" name="telefono">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control" name="password" required minlength="6">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Ruolo</label>
                                <select class="form-select" name="ruolo" required>
                                    <option value="">Seleziona ruolo</option>
                                    <option value="Utente">Utente</option>
                                    <option value="Admin">Amministratore</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Credito Iniziale (€)</label>
                                <input type="number" step="0.01" class="form-control" name="credito" value="0.00" min="0">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Punti Eco</label>
                                <input type="number" class="form-control" name="puntiEco" value="0" min="0">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Crea Utente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // User management functions
        function viewUserDetails(id) {
            console.log('View user details:', id);
            showNotification('Apertura dettagli utente', 'info');
        }

        function refreshUsers() {
            location.reload();
        }

        // Search functionality
        document.getElementById('userSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('.user-row');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Status filter
        document.getElementById('statusFilter').addEventListener('change', function(e) {
            const status = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('.user-row');
            
            rows.forEach(row => {
                const rowStatus = row.getAttribute('data-status');
                row.style.display = (!status || rowStatus === status) ? '' : 'none';
            });
        });

        // Add user form
        document.getElementById('addUserForm').addEventListener('submit', function(e) {
            e.preventDefault();
            showNotification('Nuovo utente aggiunto con successo', 'success');
            bootstrap.Modal.getInstance(document.getElementById('addUserModal')).hide();
        });

        function showNotification(message, type = 'info') {
            if (window.premiumApp && window.premiumApp.showNotification) {
                window.premiumApp.showNotification(message, type);
            } else {
                alert(message);
            }
        }

        // Show success/error messages
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                showNotification('@TempData["SuccessMessage"]', 'success');
            });
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                showNotification('@TempData["ErrorMessage"]', 'error');
            });
            </text>
        }
    </script>
}

@section Styles {
    <style>
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1rem;
        }

        .section-actions {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .filter-select {
            min-width: 150px;
        }

        .search-box {
            position: relative;
            min-width: 200px;
        }

        .search-box input {
            padding-right: 40px;
        }

        .search-box i {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        @@media (max-width: 768px) {
            .section-actions {
                flex-direction: column;
                width: 100%;
            }

            .search-box,
            .filter-select {
                width: 100%;
            }
        }
    </style>
}