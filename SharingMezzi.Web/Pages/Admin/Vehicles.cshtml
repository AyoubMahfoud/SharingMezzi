@page "/Admin/Vehicles"
@model SharingMezzi.Web.Pages.Admin.VehiclesModel
@{
    ViewData["Title"] = "Gestione Mezzi";
    Layout = "_Layout";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content">
        <div class="welcome-message">
            <h1 class="hero-title">
                <i class="fas fa-bicycle"></i>
                Gestione Mezzi
            </h1>
            <p class="hero-subtitle">Aggiungi, rimuovi o metti mezzi in manutenzione</p>
        </div>
        
        <div class="hero-actions">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addVehicleModal">
                <i class="fas fa-plus"></i>
                Nuovo Mezzo
            </button>
            <button class="btn btn-outline-primary" onclick="refreshVehicles()">
                <i class="fas fa-sync"></i>
                Aggiorna
        </button>
    </div>
</div>
</div>

<!-- Stats Grid -->
<div class="stats-grid">
    <div class="stat-card primary">
        <div class="stat-icon">
            <i class="fas fa-bicycle"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">@Model.TotalVehicles</div>
            <div class="stat-label">Mezzi Totali</div>
            <div class="stat-change">
                <i class="fas fa-info-circle"></i>
                <span>Nel sistema</span>
            </div>
        </div>
    </div>

    <div class="stat-card success">
        <div class="stat-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">@Model.AvailableVehicles</div>
            <div class="stat-label">Disponibili</div>
            <div class="stat-change positive">
                <i class="fas fa-arrow-up"></i>
                <span>@(Model.TotalVehicles > 0 ? Math.Round((decimal)Model.AvailableVehicles / Model.TotalVehicles * 100, 1) : 0)% del totale</span>
            </div>
        </div>
    </div>

    <div class="stat-card warning">
        <div class="stat-icon">
            <i class="fas fa-user"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">@Model.InUseVehicles</div>
            <div class="stat-label">In Uso</div>
            <div class="stat-change">
                <i class="fas fa-clock"></i>
                <span>Attualmente utilizzati</span>
            </div>
        </div>
    </div>

    <div class="stat-card danger">
        <div class="stat-icon">
            <i class="fas fa-tools"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">@Model.MaintenanceVehicles</div>
            <div class="stat-label">In Manutenzione</div>
            <div class="stat-change @(Model.MaintenanceVehicles > 0 ? "negative" : "")">
                <i class="fas fa-wrench"></i>
                <span>Richiedono attenzione</span>
            </div>
        </div>
    </div>
</div>

<!-- Vehicles Table -->
<div class="content-section">
    <div class="section-header">
        <h2 class="section-title">
            <i class="fas fa-list"></i>
            Elenco Mezzi
        </h2>
        <div class="section-actions">
            <div class="search-box">
                <input type="text" id="vehicleSearch" placeholder="Cerca mezzi..." class="form-control">
                <i class="fas fa-search"></i>
            </div>
    </div>
</div>

    <div class="premium-card">
        <div class="table-responsive">
            <table class="table table-hover" id="vehiclesTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Modello</th>
                        <th>Tipo</th>
                        <th>Stato</th>
                        <th>Batteria</th>
                        <th>Parcheggio</th>
                        <th>Tariffa</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehicle in Model.Vehicles)
                    {
                        <tr class="vehicle-row" data-vehicle-id="@vehicle.Id">
                            <td>
                                <span class="fw-bold text-primary">#@vehicle.Id</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="vehicle-icon me-2">
                                        @if (vehicle.Tipo == SharingMezzi.Web.Models.VehicleType.Bicicletta)
                                        {
                                            <i class="fas fa-bicycle text-primary"></i>
                                        }
                                        else if (vehicle.Tipo == SharingMezzi.Web.Models.VehicleType.Monopattino)
                                        {
                                            <i class="fas fa-skating text-success"></i>
                                        }
                                        else if (vehicle.Tipo == SharingMezzi.Web.Models.VehicleType.Scooter)
                                        {
                                            <i class="fas fa-motorcycle text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-car text-info"></i>
                                        }
                                    </div>
                                    <div>
                                        <div class="fw-semibold">@vehicle.Modello</div>
                                        @if (vehicle.IsElettrico)
                                        {
                                            <small class="text-success">âš¡ Elettrico</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">ðŸš´ Muscolare</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark">@vehicle.Tipo</span>
                            </td>
                            <td>
                                @{
                                    var statusClass = vehicle.Stato switch
                                    {
                                        SharingMezzi.Web.Models.VehicleStatus.Disponibile => "success",
                                        SharingMezzi.Web.Models.VehicleStatus.InUso => "warning",
                                        SharingMezzi.Web.Models.VehicleStatus.Manutenzione => "danger",
                                        _ => "secondary"
                                    };
                                    var statusIcon = vehicle.Stato switch
                                    {
                                        SharingMezzi.Web.Models.VehicleStatus.Disponibile => "check-circle",
                                        SharingMezzi.Web.Models.VehicleStatus.InUso => "user",
                                        SharingMezzi.Web.Models.VehicleStatus.Manutenzione => "tools",
                                        _ => "question-circle"
                                    };
                                }
                                <span class="badge bg-@statusClass">
                                    <i class="fas fa-@statusIcon me-1"></i>
                                    @vehicle.Stato
                                </span>
                            </td>
                            <td>
                                @if (vehicle.IsElettrico && vehicle.LivelloBatteria.HasValue)
                                {
                                    var batteryLevel = vehicle.LivelloBatteria.Value;
                                    var batteryClass = batteryLevel > 50 ? "success" : batteryLevel > 20 ? "warning" : "danger";
                                    
                                    <div class="battery-indicator">
                                        <div class="battery-bar">
                                            <div class="battery-fill bg-@batteryClass" style="width: @batteryLevel%"></div>
                                        </div>
                                        <span class="battery-text">@batteryLevel%</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (vehicle.ParcheggioId.HasValue)
                                {
                                    <span class="badge bg-info">P@vehicle.ParcheggioId</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <span class="fw-semibold">â‚¬@vehicle.TariffaPerMinuto.ToString("F2")</span>
                                <small class="text-muted d-block">/min</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-outline-primary" onclick="editVehicle(@vehicle.Id)" title="Modifica">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    @if (vehicle.Stato == SharingMezzi.Web.Models.VehicleStatus.Disponibile)
                                    {
                                        <button class="btn btn-sm btn-outline-warning" onclick="setMaintenance(@vehicle.Id)" title="Manutenzione">
                                            <i class="fas fa-tools"></i>
                                        </button>
                                    }
                                    else if (vehicle.Stato == SharingMezzi.Web.Models.VehicleStatus.Manutenzione)
                                    {
                                        <button class="btn btn-sm btn-outline-success" onclick="setAvailable(@vehicle.Id)" title="Rendi Disponibile">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteVehicle(@vehicle.Id)" title="Elimina">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Vehicle Modal -->
<div class="modal fade" id="addVehicleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus"></i>
                    Aggiungi Nuovo Mezzo
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addVehicleForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Modello</label>
                        <input type="text" class="form-control" name="modello" required>
                    </div>
                        </div>
                        <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Tipo</label>
                                <select class="form-select" name="tipo" required>
                                    <option value="">Seleziona tipo</option>
                            <option value="Bicicletta">Bicicletta</option>
                                    <option value="Monopattino">Monopattino</option>
                            <option value="Scooter">Scooter</option>
                            <option value="Auto">Auto</option>
                                    <option value="EBike">E-Bike</option>
                        </select>
                    </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="isElettrico" id="isElettrico">
                                    <label class="form-check-label" for="isElettrico">
                                        Elettrico
                                    </label>
                                </div>
                            </div>
                    </div>
                        <div class="col-md-6">
                    <div class="mb-3">
                                <label class="form-label">Tariffa per minuto (â‚¬)</label>
                                <input type="number" step="0.01" class="form-control" name="tariffaPerMinuto" value="0.20" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Crea Mezzo
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Vehicle management functions
        function editVehicle(id) {
            // Implement edit functionality
            console.log('Edit vehicle:', id);
            showNotification('FunzionalitÃ  di modifica in sviluppo', 'info');
        }

        function setMaintenance(id) {
            if (confirm('Mettere il mezzo in manutenzione?')) {
                // Implement maintenance functionality
                console.log('Set maintenance:', id);
                showNotification('Mezzo impostato in manutenzione', 'warning');
            }
        }

        function setAvailable(id) {
            if (confirm('Rendere il mezzo disponibile?')) {
                // Implement available functionality
                console.log('Set available:', id);
                showNotification('Mezzo reso disponibile', 'success');
            }
        }

        function deleteVehicle(id) {
            if (confirm('Sei sicuro di voler eliminare questo mezzo?')) {
                // Implement delete functionality
                console.log('Delete vehicle:', id);
                showNotification('Mezzo eliminato', 'success');
            }
        }

        function refreshVehicles() {
            location.reload();
        }

        // Search functionality
        document.getElementById('vehicleSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('.vehicle-row');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Add vehicle form
        document.getElementById('addVehicleForm').addEventListener('submit', function(e) {
            e.preventDefault();
            // Implement add vehicle functionality
            showNotification('Nuovo mezzo aggiunto con successo', 'success');
            bootstrap.Modal.getInstance(document.getElementById('addVehicleModal')).hide();
        });

        // Notification function
        function showNotification(message, type = 'info') {
            // Use the premium-app.js notification system if available
            if (window.premiumApp && window.premiumApp.showNotification) {
                window.premiumApp.showNotification(message, type);
                } else {
                alert(message);
            }
        }
    </script>
}

@section Styles {
    <style>
        .battery-indicator {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .battery-bar {
            width: 40px;
            height: 8px;
            background: #e9ecef;
            border-radius: 4px;
            overflow: hidden;
        }

        .battery-fill {
            height: 100%;
            transition: width 0.3s ease;
        }

        .battery-text {
            font-size: 0.75rem;
            font-weight: 500;
        }

        .vehicle-icon {
            width: 24px;
            text-align: center;
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            padding-right: 40px;
        }

        .search-box i {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }
    </style>
}