@page
@model SharingMezzi.Web.Pages.ProfileModel
@{
    ViewData["Title"] = "Profilo";
    Layout = "_Layout";
}

<!-- Page Header -->
<div class="page-header-section animate-fade-in-up mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap">
        <div>
            <h1 class="page-title">
                <i class="fas fa-user-circle text-primary"></i>
                Profilo Utente
            </h1>
            <p class="page-subtitle">Gestisci le tue informazioni personali e le impostazioni dell'account</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary" onclick="exportProfile()">
                <i class="fas fa-download me-2"></i>Esporta
            </button>
            <button class="btn btn-primary" onclick="saveAllChanges()">
                <i class="fas fa-save me-2"></i>Salva Tutto
        </button>
        </div>
    </div>
</div>

<!-- Alert Messages -->
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
}

<!-- Profile Content -->
<div class="row g-4">
    <!-- Profile Information Card -->
    <div class="col-lg-8">
        <div class="content-card">
            <div class="card-header-section">
                <h3><i class="fas fa-user text-primary me-2"></i>Informazioni Personali</h3>
                <p class="text-muted mb-0">Aggiorna i tuoi dati personali</p>
                    </div>
            
            <form method="post" asp-page-handler="UpdateProfile" class="mt-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="ProfileUpdate.Nome" class="form-label">
                            <i class="fas fa-user me-1"></i>Nome
                        </label>
                        <input asp-for="ProfileUpdate.Nome" type="text" class="form-control" placeholder="Il tuo nome">
                        <span asp-validation-for="ProfileUpdate.Nome" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6">
                        <label asp-for="ProfileUpdate.Cognome" class="form-label">
                            <i class="fas fa-user me-1"></i>Cognome
                        </label>
                        <input asp-for="ProfileUpdate.Cognome" type="text" class="form-control" placeholder="Il tuo cognome">
                        <span asp-validation-for="ProfileUpdate.Cognome" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6">
                        <label asp-for="ProfileUpdate.Email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email
                        </label>
                        <input asp-for="ProfileUpdate.Email" type="email" class="form-control" placeholder="La tua email">
                        <span asp-validation-for="ProfileUpdate.Email" class="text-danger small"></span>
                </div>
                    
                    <div class="col-md-6">
                        <label asp-for="ProfileUpdate.Telefono" class="form-label">
                            <i class="fas fa-phone me-1"></i>Telefono
                        </label>
                        <input asp-for="ProfileUpdate.Telefono" type="tel" class="form-control" placeholder="Il tuo telefono">
                        <span asp-validation-for="ProfileUpdate.Telefono" class="text-danger small"></span>
            </div>
        </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Aggiorna Profilo
                    </button>
            </div>
            </form>
                </div>

        <!-- Change Password Card -->
        <div class="content-card mt-4">
            <div class="card-header-section">
                <h3><i class="fas fa-lock text-primary me-2"></i>Cambio Password</h3>
                <p class="text-muted mb-0">Modifica la tua password di accesso</p>
                </div>
            
            <form method="post" asp-page-handler="ChangePassword" class="mt-4">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="PasswordChange.CurrentPassword" class="form-label">
                            <i class="fas fa-key me-1"></i>Password Attuale
                        </label>
                        <input asp-for="PasswordChange.CurrentPassword" type="password" class="form-control" placeholder="Inserisci la password attuale">
                        <span asp-validation-for="PasswordChange.CurrentPassword" class="text-danger small"></span>
    </div>

                        <div class="col-md-6">
                        <label asp-for="PasswordChange.NewPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>Nuova Password
                        </label>
                        <input asp-for="PasswordChange.NewPassword" type="password" class="form-control" placeholder="Inserisci la nuova password">
                        <span asp-validation-for="PasswordChange.NewPassword" class="text-danger small"></span>
                            </div>
                    
                        <div class="col-md-6">
                        <label asp-for="PasswordChange.ConfirmPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>Conferma Password
                        </label>
                        <input asp-for="PasswordChange.ConfirmPassword" type="password" class="form-control" placeholder="Conferma la nuova password">
                        <span asp-validation-for="PasswordChange.ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                
                <div class="mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-key me-2"></i>Cambia Password
                    </button>
                    </div>
                </form>
            </div>
        </div>

    <!-- Profile Stats & Info -->
    <div class="col-lg-4">
        <!-- User Info Card -->
        <div class="content-card text-center">
            <div class="profile-avatar mb-3">
                <div class="avatar-circle">
                    <i class="fas fa-user fa-3x text-white"></i>
                </div>
            </div>
            
            <h4 class="mb-1">@(Model.CurrentUser?.Nome ?? "Nome") @(Model.CurrentUser?.Cognome ?? "Cognome")</h4>
            <p class="text-muted mb-3">@(Model.CurrentUser?.Email ?? "email@example.com")</p>
            
            <div class="d-grid gap-2">
                <button class="btn btn-outline-primary btn-sm" onclick="editAvatar()">
                    <i class="fas fa-camera me-2"></i>Cambia Avatar
                </button>
                <button class="btn btn-outline-secondary btn-sm" onclick="viewActivity()">
                    <i class="fas fa-chart-line me-2"></i>Vedi Attivit√†
                </button>
            </div>
                    </div>

        <!-- Account Stats Card -->
        <div class="content-card mt-4">
            <div class="card-header-section">
                <h5><i class="fas fa-chart-pie text-primary me-2"></i>Statistiche Account</h5>
                    </div>
            
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-icon bg-primary">
                        <i class="fas fa-credit-card text-white"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">‚Ç¨@(Model.CurrentUser?.Credito.ToString("F2") ?? "0.00")</div>
                        <div class="stat-label">Credito Attuale</div>
            </div>
        </div>

                <div class="stat-item">
                    <div class="stat-icon bg-success">
                        <i class="fas fa-leaf text-white"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">@(Model.CurrentUser?.PuntiEco ?? 0)</div>
                        <div class="stat-label">Punti Eco</div>
                    </div>
            </div>
                
                        <div class="stat-item">
                    <div class="stat-icon bg-info">
                        <i class="fas fa-calendar-alt text-white"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">@(Model.CurrentUser?.DataRegistrazione.ToString("dd/MM/yyyy") ?? "N/A")</div>
                        <div class="stat-label">Data Registrazione</div>
                        </div>
                    </div>
                
                        <div class="stat-item">
                    <div class="stat-icon bg-warning">
                        <i class="fas fa-shield-alt text-white"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">@(Model.CurrentUser?.Ruolo.ToString() ?? "Utente")</div>
                        <div class="stat-label">Ruolo</div>
                        </div>
                    </div>
                        </div>
                    </div>

        <!-- Quick Actions Card -->
        <div class="content-card mt-4">
            <div class="card-header-section">
                <h5><i class="fas fa-bolt text-primary me-2"></i>Azioni Rapide</h5>
            </div>
            
            <div class="d-grid gap-2">
                <a href="/Dashboard" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-chart-pie me-2"></i>Vai alla Dashboard
                </a>
                <a href="/Billing" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-credit-card me-2"></i>Gestisci Fatturazione
                </a>
                <a href="/Trips" class="btn btn-outline-info btn-sm">
                    <i class="fas fa-route me-2"></i>Storico Viaggi
                </a>
                <button class="btn btn-outline-danger btn-sm" onclick="deleteAccount()">
                    <i class="fas fa-trash me-2"></i>Elimina Account
                </button>
                        </div>
                    </div>
                </div>
</div>

<!-- Delete Account Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>Elimina Account
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Sei sicuro di voler eliminare il tuo account? Questa azione non pu√≤ essere annullata.</p>
                <p class="text-danger"><strong>Tutti i tuoi dati verranno persi definitivamente.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteAccount()">
                    <i class="fas fa-trash me-2"></i>Elimina Definitivamente
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Profile Management Functions
        function saveAllChanges() {
            // Trigger both forms
            document.querySelector('form[asp-page-handler="UpdateProfile"]').submit();
        }

        function exportProfile() {
            const userData = {
                nome: '@Model.CurrentUser?.Nome',
                cognome: '@Model.CurrentUser?.Cognome',
                email: '@Model.CurrentUser?.Email',
                telefono: '@Model.CurrentUser?.Telefono',
                credito: '@(Model.CurrentUser?.Credito.ToString("F2") ?? "0.00")',
                puntiEco: '@(Model.CurrentUser?.PuntiEco ?? 0)',
                ruolo: '@(Model.CurrentUser?.Ruolo.ToString() ?? "Utente")',
                dataRegistrazione: '@(Model.CurrentUser?.DataRegistrazione.ToString("dd/MM/yyyy") ?? "N/A")'
            };

            const dataStr = JSON.stringify(userData, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'profilo-utente.json';
            link.click();
            URL.revokeObjectURL(url);

            showNotification('Profilo esportato con successo!', 'success');
        }

        function editAvatar() {
            showNotification('Funzionalit√† cambio avatar in arrivo!', 'info');
        }

        function viewActivity() {
            showNotification('Reindirizzamento alla pagina attivit√†...', 'info');
            setTimeout(() => {
                window.location.href = '/Dashboard';
            }, 1500);
        }

        function deleteAccount() {
            const modal = new bootstrap.Modal(document.getElementById('deleteAccountModal'));
            modal.show();
        }

        function confirmDeleteAccount() {
            if (confirm('Sei ASSOLUTAMENTE sicuro di voler eliminare il tuo account? Questa azione non pu√≤ essere annullata.')) {
                showNotification('Account eliminato con successo. Reindirizzamento...', 'success');
                setTimeout(() => {
                    window.location.href = '/Logout';
                }, 2000);
            }
        }

        function showNotification(message, type = 'info') {
            const alertClass = type === 'success' ? 'alert-success' : 
                             type === 'warning' ? 'alert-warning' : 
                             type === 'danger' ? 'alert-danger' : 'alert-info';

            const alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed" 
                     style="top: 120px; right: 20px; z-index: 9999; min-width: 300px;">
                    <i class="fas fa-info-circle me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            document.body.insertAdjacentHTML('beforeend', alertHtml);
            
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                if (alerts.length > 0) {
                    const lastAlert = alerts[alerts.length - 1];
                    try {
                        const bsAlert = new bootstrap.Alert(lastAlert);
                        bsAlert.close();
                    } catch (e) {
                        lastAlert.remove();
                    }
                }
            }, 5000);
        }

        // Auto-save functionality
        let autoSaveTimer;
        const inputs = document.querySelectorAll('input, textarea, select');
        
        inputs.forEach(input => {
            input.addEventListener('input', () => {
                clearTimeout(autoSaveTimer);
                autoSaveTimer = setTimeout(() => {
                    showNotification('Modifiche salvate automaticamente', 'success');
                }, 2000);
            });
        });

        // Page initialization
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Pagina Profilo caricata');
            
            // Add smooth animations
            const cards = document.querySelectorAll('.content-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.classList.add('animate-fade-in-up');
            });
        });
    </script>
}
