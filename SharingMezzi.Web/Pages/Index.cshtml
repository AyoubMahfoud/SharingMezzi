
@page
@model SharingMezzi.Web.Pages.IndexModel
@{
    ViewData["Title"] = "SharingMezzi - Benvenuto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="hero-section premium-card animate-fade-in-up" style="margin-top: 3rem;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="page-title mb-4">
                    <i class="fas fa-bicycle text-gradient me-3"></i>
                    Benvenuto su SharingMezzi
                </h1>
                <p class="page-subtitle mb-5">
                    Il sistema di condivisione di mezzi di trasporto più conveniente e sostenibile.<br>
                    <span class="text-gradient">Noleggia biciclette, monopattini e molto altro con un semplice click!</span>
                </p>
                <div class="row mb-5">
                    <div class="col-md-4 mb-4">
                        <div class="feature-card premium-card h-100">
                            <div class="feature-icon">
                                <i class="fas fa-bicycle bg-primary"></i>
                            </div>
