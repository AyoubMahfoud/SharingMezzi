{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SharingMezzi.Web.Services": "Debug",
      "SharingMezzi.Web.Pages": "Debug"
    }
  },
  "ApiSettings": {
    "BaseUrl": "http://localhost:5000",
    "Timeout": 30,
    "RetryAttempts": 3,
    "RetryDelay": 1000
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=sharingmezzi;Username=postgres;Password=password"
  },
  "JwtSettings": {
    "SecretKey": "development-secret-key-for-sharingmezzi-app-32-chars-minimum",
    "Issuer": "SharingMezzi.Dev",
    "Audience": "SharingMezzi.Web.Dev",
    "ExpiryMinutes": 60
  },
  "FeatureFlags": {
    "EnableRealTimeUpdates": true,
    "EnableDetailedLogging": true,
    "EnableErrorReporting": true
  }
}